{
    "name": "websitebanhngot/bakery-website",
    "description": "Website bán bánh ngọt với PHP thuần",
    "type": "project",
    "require": {
        "php": ">=7.4.0",
        "ext-pdo": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "ext-gd": "*",
        "ext-mbstring": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers/AuthHelper.php",
            "app/helpers/UploadHelper.php",
            "app/helpers/ValidationHelper.php",
            "app/helpers/CartHelper.php",
            "app/helpers/FormatHelper.php"
        ]
    },
    "authors": [
        {
            "name": "Website Banh Ngot",
            "email": "contact@websitebanhngot.com"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "optimize-autoloader": true
    }
}